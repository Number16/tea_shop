<Window x:Class="Tea_Shop.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tea_Shop"
        mc:Ignorable="d"
        Title="UserWindow" Height="512.857" Width="520
        ">
    <Grid>
        <DataGrid x:Name="userGrid" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="369" Width="492" SelectionChanged="userGrid_SelectionChanged" Loaded="userGrid_Loaded" IsSynchronizedWithCurrentItem="True" AutomationProperties.IsColumnHeader="True"/>
        <Button x:Name="backUserButton" Content="Назад" HorizontalAlignment="Left" Margin="10,391,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="editButton" Content="Сохранить данные" HorizontalAlignment="Left" Margin="348,441,0,0" VerticalAlignment="Top" Width="154" Click="editButton_Click"/>
        <Button x:Name="removeButton" Content="Удалить пользователя" HorizontalAlignment="Left" Margin="348,416,0,0" VerticalAlignment="Top" Width="154" Click="removeButton_Click"/>
        <Button x:Name="searchButton" Content="Поиск" HorizontalAlignment="Left" Margin="348,391,0,0" VerticalAlignment="Top" Width="154" Click="editButton_Click"/>

    </Grid>
</Window>
